@model BookInfo.ViewModels.RegisterModel
 
<h2 class="RegisterH2">Регистрация</h2>
 
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" class="loginform">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group m-3">
            <label class="form-label" asp-for="Email">Введите Email</label><br />
            <input type="text"  class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group m-3">
            <label asp-for="Password">Введите пароль</label><br />
            <input  class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group m-3">
            <label class="form-label" asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input class="form-control"  asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group loginBtn searchBtn">
            <input type="submit" class="btn" value="Регистрация" />
        </div>
    </div>
</form>