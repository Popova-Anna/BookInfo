@model IEnumerable<BookInfo.ViewModels.BookView>
@{
    ViewData["Title"] = "Home Page";
}

<div class="all-block row">
    @foreach (var item in  ViewBag.BookViewsLast)
    {
       <a asp-action="Details" asp-controller="Books" asp-route-id="@item.Id"  class="a-img"><img src="@item.Cover" class="img-head"> </a>

    }
</div>
<div class="container">
    <div class="row row-cols-sm-2 row-cols-md-3 row-cols-lg-3 row-cols-xl-4" style="margin:15px;"> 
        @foreach (var item in Model)
        {
            <div class="col mb-4">
                <div class="card" style="width:18rem;height:25rem; ">
                    <img src="@item.Cover" class="card-img-top" alt="img">
                    <div class="card-title-over position-absolute bottom-0 card-body">
                        <hr>
                         <a asp-action="Details" asp-controller="Books" asp-route-id="@item.Id">
                             <h3 class="card-title ">@item.Title</h3>
                         </a>
                         <hr>
                         <strong>Автор: </strong>@item.Author<br>
                         <strong>Жанры: </strong>
                         @foreach (var itemG in item.Genres)
                         {
                             <label>@itemG.Name &nbsp</label>
                         }
                    </div>
                </div>
            </div>
        }
    </div>
</div>